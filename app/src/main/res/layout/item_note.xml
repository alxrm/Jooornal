<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/item_note_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      android:text="Без названия"
      android:textColor="@android:color/black"
      android:textSize="18sp"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/item_note_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:text="блять мне похоже ещё и экран просмотра смски нужно делать (сука ладно и его сделаю)"
      android:textColor="@color/color_text_secondary"
      android:maxLines="8"
      android:ellipsize="end"
      android:textSize="14sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/item_note_time"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_due_date_black_24dp"
        android:duplicateParentState="false"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="До 20 янв. 2017"
        android:textColor="@color/color_text_primary"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/item_note_student"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_students_black_24dp"
        android:duplicateParentState="false"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Иванов Г. В."
        android:textColor="@color/color_text_primary"
        android:textSize="14sp"
        android:visibility="gone"
        />
  </LinearLayout>


  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:alpha="0.5"
      android:background="@color/color_separator"
      />


</LinearLayout>