<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp"
      >

    <TextView
        android:id="@+id/item_message_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="+7 999 111-11-11 (Мать)"
        android:textColor="@color/color_text_primary"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/item_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/item_message_from"
        android:layout_margin="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="01.01.1970"
        android:textColor="@color/color_separator"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/item_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_from"
        android:layout_margin="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Привет поставь зачёт"
        android:textColor="@color/color_text_secondary"
        android:textSize="14sp"
        />

  </RelativeLayout>


  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_alignParentBottom="true"
      android:alpha="0.5"
      android:background="@color/color_separator"
      />

</RelativeLayout>